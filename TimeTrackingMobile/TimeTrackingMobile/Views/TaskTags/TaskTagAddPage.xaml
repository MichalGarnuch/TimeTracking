<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="TimeTrackingMobile.Views.TaskTagAddPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Add Task-Tag"
    BackgroundColor="{StaticResource PageBackgroundColor}"
    Shell.PresentationMode="ModalAnimated">

    <Grid RowDefinitions="120, *">
        <!-- Banner -->
        <Frame Grid.Row="0"
           Padding="20" HasShadow="False" CornerRadius="0">
            <Frame.Background>
                <StaticResource Key="AccentGradient"/>
            </Frame.Background>
            <Label Text="Add Task-Tag Link"
             FontSize="Large" FontAttributes="Bold"
             TextColor="White"
             VerticalOptions="Center" HorizontalOptions="Center"/>
        </Frame>

        <!-- Formularz -->
        <StackLayout Grid.Row="1" Padding="20" Spacing="15">
            <Label Text="Task ID"/>
            <Entry x:Name="TaskIdEntry" Keyboard="Numeric"/>

            <Label Text="Tag ID"/>
            <Entry x:Name="TagIdEntry" Keyboard="Numeric"/>

            <StackLayout Orientation="Horizontal"
                   HorizontalOptions="Center"
                   Spacing="20"
                   Margin="0,20">
                <Button Text="Save" Clicked="OnSaveClicked"/>
                <Button Text="Cancel" Clicked="OnCancelClicked"/>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
