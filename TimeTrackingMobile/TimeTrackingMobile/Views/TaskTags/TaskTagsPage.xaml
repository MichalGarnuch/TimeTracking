<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="TimeTrackingMobile.Views.TaskTagsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Task-Tag Relations"
    BackgroundColor="{StaticResource PageBackgroundColor}">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="sync.png"
                 Text="Refresh"
                 Order="Primary"
                 Priority="0"
                 Clicked="OnRefreshClicked" />
        <ToolbarItem IconImageSource="add.png"
                 Text="Add"
                 Order="Primary"
                 Priority="1"
                 Clicked="OnAddClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="120, *">
        <!-- Banner -->
        <Frame Grid.Row="0"
           Padding="20" HasShadow="False" CornerRadius="0">
            <Frame.Background>
                <StaticResource Key="AccentGradient"/>
            </Frame.Background>
            <Label Text="Task-Tag Relations"
             FontSize="Large" FontAttributes="Bold"
             TextColor="White"
             VerticalOptions="Center" HorizontalOptions="Center"/>
        </Frame>

        <!-- Lista relacji -->
        <CollectionView Grid.Row="1"
                    ItemsSource="{Binding TaskTags}"
                    SelectionMode="Single"
                    SelectionChanged="OnSelectionChanged"
                    Margin="20">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                 Margin="0,0,0,10"
                 CornerRadius="8"
                 HasShadow="True"
                 BackgroundColor="White">
                        <StackLayout Orientation="Horizontal" Spacing="20">
                            <Label Text="Task ID:"
                     FontAttributes="Bold"/>
                            <Label Text="{Binding TaskID}"/>
                            <Label Text="Tag ID:"
                     FontAttributes="Bold"/>
                            <Label Text="{Binding TagID}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
