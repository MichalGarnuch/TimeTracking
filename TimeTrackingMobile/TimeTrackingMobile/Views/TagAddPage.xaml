<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="TimeTrackingMobile.Views.TagAddPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Add Tag"
    Shell.PresentationMode="ModalAnimated">

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Create new Tag"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label Text="Tag Name" />
        <Entry x:Name="TagNameEntry" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
            <Button Text="Save" Clicked="SaveButtonClicked" />
            <Button Text="Cancel" Clicked="CancelButtonClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
