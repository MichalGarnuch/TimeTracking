<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="TimeTrackingMobile.Views.DepartmentsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Departments"
    BackgroundColor="{StaticResource PageBackgroundColor}">

    <!-- Toolbar: odśwież i dodaj -->
    <ContentPage.ToolbarItems>
        <ToolbarItem
      IconImageSource="sync.png"
      Text="Refresh"
      Order="Primary"
      Priority="0"
      Clicked="OnRefreshClicked" />
        <ToolbarItem
      IconImageSource="add.png"
      Text="Add"
      Order="Primary"
      Priority="1"
      Clicked="OnAddClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="120, *">
        <!-- Gradientowy banner -->
        <Frame Grid.Row="0"
           Padding="20"
           HasShadow="False"
           CornerRadius="0"
           BackgroundColor="{StaticResource Primary}">
            <Frame.Background>
                <StaticResource Key="AccentGradient"/>
            </Frame.Background>
            <Label Text="Departments"
             FontSize="Large"
             FontAttributes="Bold"
             TextColor="White"
             VerticalOptions="Center"
             HorizontalOptions="Center"/>
        </Frame>

        <!-- Lista działów -->
        <CollectionView Grid.Row="1"
                    ItemsSource="{Binding Departments}"
                    SelectionMode="Single"
                    SelectionChanged="OnSelectionChanged"
                    Margin="20">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                 Margin="0,0,0,10"
                 CornerRadius="8"
                 HasShadow="True"
                 BackgroundColor="White">
                        <StackLayout>
                            <Label Text="{Binding DepartmentName}"
                     FontSize="Medium"
                     TextColor="{StaticResource TextDarkColor}"/>
                            <Label Text="ID: {Binding DepartmentID}"
                     FontSize="Small"
                     TextColor="{StaticResource TextDarkColor}"
                     Opacity="0.6"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
