<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTrackingMobile.Views.DepartmentsPage"
             Title="Departments"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,Auto,*">

        <!-- 1) Gradientowy banner + tytuł -->
        <Frame Grid.Row="0"
           Padding="20"
           HasShadow="False"
           CornerRadius="0"
           HeightRequest="120">
            <Frame.Background>
                <StaticResource Key="AccentGradient"/>
            </Frame.Background>
            <Label Text="Departments"
             FontSize="Large"
             FontAttributes="Bold"
             TextColor="White"
             VerticalOptions="Center"
             HorizontalOptions="Center"/>
        </Frame>

        <!-- 2) Przycisk odświeżania -->
        <Button Grid.Row="1"
            Text="Load Departments"
            Command="{Binding LoadDepartmentsCommand}"
            Margin="20,10"/>

        <!-- 3) Lista w formie kart -->
        <CollectionView Grid.Row="2"
                    ItemsSource="{Binding Departments}"
                    Margin="20">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                 Margin="0,0,0,10"
                 CornerRadius="8"
                 HasShadow="True"
                 BackgroundColor="White">
                        <Label Text="{Binding DepartmentName}"
                   FontSize="Medium"
                   TextColor="{StaticResource TextDarkColor}"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
