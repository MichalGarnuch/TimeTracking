<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="TimeTrackingMobile.Views.ProjectAddPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Add Project"
    BackgroundColor="{StaticResource PageBackgroundColor}"
    Shell.PresentationMode="ModalAnimated">

    <Grid RowDefinitions="120, *">
        <!-- Banner -->
        <Frame Grid.Row="0"
           Padding="20"
           HasShadow="False"
           CornerRadius="0">
            <Frame.Background>
                <StaticResource Key="AccentGradient"/>
            </Frame.Background>
            <Label Text="Add Project"
             FontSize="Large"
             FontAttributes="Bold"
             TextColor="White"
             VerticalOptions="Center"
             HorizontalOptions="Center"/>
        </Frame>

        <!-- Formularz -->
        <ScrollView Grid.Row="1" Padding="20">
            <StackLayout Spacing="15">

                <Label Text="Project Name"/>
                <Entry x:Name="NameEntry" Placeholder="Name"/>

                <Label Text="Project Type ID"/>
                <Entry x:Name="TypeIdEntry" Keyboard="Numeric"/>

                <Label Text="Start Date"/>
                <DatePicker x:Name="StartPicker"/>

                <Label Text="End Date"/>
                <DatePicker x:Name="EndPicker"/>

                <Label Text="Budget"/>
                <Entry x:Name="BudgetEntry" Keyboard="Numeric"/>

                <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Spacing="20"
                     Margin="0,20,0,0">
                    <Button Text="Save" Clicked="OnSaveClicked"/>
                    <Button Text="Cancel" Clicked="OnCancelClicked"/>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
