<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="TimeTrackingMobile.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    BackgroundColor="{StaticResource PageBackgroundColor}">

    <Grid RowDefinitions="200, *">
        <!-- Banner -->
        <Frame Grid.Row="0" HasShadow="False" CornerRadius="0">
            <Frame.Background>
                <StaticResource Key="AccentGradient"/>
            </Frame.Background>
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="TimeTracking Login"
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="White" />
            </StackLayout>
        </Frame>

        <!-- Formularz logowania -->
        <StackLayout Grid.Row="1" Padding="20" Spacing="20" VerticalOptions="Center">
            <Entry x:Name="UsernameEntry"
             Placeholder="Username"
             Keyboard="Default" />
            <Entry x:Name="PasswordEntry"
             Placeholder="Password"
             IsPassword="True" />
            <Button Text="Login"
              Clicked="OnLoginClicked"
              HorizontalOptions="Center"
              WidthRequest="200"/>
        </StackLayout>
    </Grid>
</ContentPage>
