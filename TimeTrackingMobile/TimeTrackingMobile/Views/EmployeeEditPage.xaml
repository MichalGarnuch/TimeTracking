<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TimeTrackingMobile.Views.EmployeeEditPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Edit Employee"
    Shell.PresentationMode="ModalAnimated"
    >

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Edit Employee"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label Text="Name" />
        <Entry x:Name="NameEntry" />

        <Label Text="Email" />
        <Entry x:Name="EmailEntry" />

        <Label Text="Department ID" />
        <Entry x:Name="DepartmentIdEntry" Keyboard="Numeric" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Save" Clicked="SaveButtonClicked" Margin="10,0" />
            <Button Text="Cancel" Clicked="CancelButtonClicked" Margin="10,0" />
        </StackLayout>
    </StackLayout>
</ContentPage>
