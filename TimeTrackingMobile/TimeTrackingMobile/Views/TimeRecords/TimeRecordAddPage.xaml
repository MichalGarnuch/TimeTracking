<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="TimeTrackingMobile.Views.TimeRecords.TimeRecordAddPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Add TimeRecord"
    BackgroundColor="{StaticResource PageBackgroundColor}"
    Shell.PresentationMode="ModalAnimated">

    <Grid RowDefinitions="120, *">
        <!-- Banner -->
        <Frame
      Grid.Row="0"
      Padding="20"
      HasShadow="False"
      CornerRadius="0"
      BackgroundColor="{StaticResource Primary}">
            <Frame.Background>
                <StaticResource Key="AccentGradient"/>
            </Frame.Background>
            <Label
        Text="Create Time Record"
        FontSize="Large"
        FontAttributes="Bold"
        TextColor="White"
        VerticalOptions="Center"
        HorizontalOptions="Center"/>
        </Frame>

        <!-- Formularz -->
        <ScrollView Grid.Row="1" Padding="20">
            <StackLayout Spacing="15">
                <Label Text="Employee" />
                <Picker
          x:Name="EmpPicker"
          Title="Select employee"
          ItemDisplayBinding="{Binding Name}" />

                <Label Text="Task" />
                <Picker
          x:Name="TaskPicker"
          Title="Select task"
          ItemDisplayBinding="{Binding TaskName}" />

                <Label Text="Start Date" />
                <DatePicker x:Name="StartPicker" Format="dd/MM/yyyy" />

                <Label Text="End Date" />
                <DatePicker x:Name="EndPicker" Format="dd/MM/yyyy" />

                <Label Text="Hours Spent" />
                <Entry x:Name="HoursEntry" Keyboard="Numeric" />

                <StackLayout
          Orientation="Horizontal"
          HorizontalOptions="Center"
          Spacing="20"
          Margin="0,20,0,0">
                    <Button Text="Save"   Clicked="OnSaveClicked" />
                    <Button Text="Cancel" Clicked="OnCancelClicked" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
